<phpunit backupGlobals="false"
         backupStaticAttributes="false" 
         bootstrap="bootstrap.php"
         cacheTokens="true"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         verbose="false">

	<testsuites>
		<testsuite name="Respect\Template Unit Test Suite">
             <directory suffix="Test.php">./library/Respect/Template</directory>
         </testsuite>
		<testsuite name="Respect\Template PHPT Test Suite">
             <directory suffix=".phpt">./examples</directory>
         </testsuite>
	</testsuites>
	
    <filter>
        <whitelist>
            <directory>../library/Respect/Template</directory>
        </whitelist>
    </filter>
</phpunit>
